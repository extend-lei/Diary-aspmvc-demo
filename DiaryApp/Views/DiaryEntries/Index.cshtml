@model List<DiaryEntry>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<a class="btn btn-primary" asp-action="Create"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
				<path d="m.5 3 .04.87a2 2 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2m5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19q-.362.002-.683.12L1.5 2.98a1 1 0 0 1 1-.98z"/>
				<path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5"/>
			</svg> Create a new Diary</a>
		</div>	
		<div class="col-6 text-end">
			<h2> Diary Entries</h2>
		</div>
	</div>
</div>

<div class="table-responsive">
	
	<table class="table table-striped table-hover">
		<thead>
		<tr>
			<th>Title</th>
			<th>Content</th>
			<th>Date</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
			@foreach (var diaryEntry in Model)
			{
				<tr>
					<td>@diaryEntry.Title</td>
					<td>@diaryEntry.Content</td>
					<td>@diaryEntry.Created</td>
					<td>
						<a asp-action="Create" asp-route-id="@diaryEntry.Id" class="btn btn-info">Edit</a>
						<a asp-action="Delete" asp-route-id="@diaryEntry.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>